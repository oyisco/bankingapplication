<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
<RelativeLayout
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_80sdp"
    >
    <ImageView
        android:id="@+id/imgUserChatedWith"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_centerVertical="true"
        android:src="@drawable/single"
        android:visibility="visible"
        android:clickable="true"
        android:gravity="center"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:id="@+id/viewCentered"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="William Heaven"
        android:textColor="@color/black"
        android:layout_marginLeft="12dp"
        android:gravity="center"
        android:layout_above="@+id/viewCentered"
        android:layout_toRightOf="@+id/imgUserChatedWith"
        android:layout_toEndOf="@+id/imgUserChatedWith"
        />

    <TextView
        android:id="@+id/txtPhoneNumber"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="03367548761"
        android:layout_below="@+id/viewCentered"
        android:layout_toRightOf="@+id/imgUserChatedWith"
        android:layout_marginLeft="@dimen/_10sdp"
        />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="visible"
        android:layout_marginRight="@dimen/_15sdp"
        android:button="@drawable/checkbox_selector_add_member"
        android:id="@+id/checkBox" />

    <TextView
        android:id="@+id/txtInvite"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingTop="@dimen/_5sdp"
        android:paddingBottom="@dimen/_5sdp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/_10sdp"
        android:background="@drawable/bg_invite"
        android:text="@string/inviteFrnd"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:visibility="gone"
        />
</RelativeLayout>
</RelativeLayout>