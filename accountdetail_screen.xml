<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/registration_activity"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    >
    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_below="@+id/top_bar"
        >
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:id="@+id/rlHeader"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/_60sdp"
                android:paddingTop="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/logoImg"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_login" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp4"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/txtHeader"
                    android:text="CARD DETAIL"
                    android:textColor="@color/textcolorpurple"
                    android:layout_below="@+id/logoImg"
                    android:textSize="@dimen/_20sdp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutBottom_v1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/rlHeader"
                android:background="@drawable/welcome_bottom_bg"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/lnrSettings"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_70sdp"                        android:background="@drawable/textviewbottomline"
                        android:paddingTop="@dimen/_2sdp">


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_centerVertical="true"
                            android:textColorHint="#FFFFFF"
                            android:theme="@style/themeforinuputtext"
                            >
                            <EditText
                                android:id="@+id/edtRefrName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:backgroundTint="#ffffff"
                                android:hint="CVV"
                                android:inputType="textPersonName"
                                android:paddingTop="@dimen/_2sdp"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/textviewbottomline"
                        android:minHeight="@dimen/_38sdp"
                        android:paddingTop="@dimen/_4sdp">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:textColorHint="#FFFFFF"
                            android:theme="@style/themeforinuputtext"
                            >

                            <EditText
                                android:id="@+id/edtAmount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:hint="PIN"
                                android:inputType="number"
                                android:paddingTop="@dimen/_2sdp"
                                android:textSize="@dimen/_14sdp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/txtFee"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Convenience Fee: #0.00"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp"
                        />
                </LinearLayout>
                <View
                    android:id="@+id/view11"
                    android:layout_height="1dp"
                    android:layout_width="1dp"
                    android:layout_below="@+id/lnrSettings"
                    android:layout_centerHorizontal="true"
                    />

                <TextView
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_30sdp"
                    android:background="@drawable/gradientbg_purple"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:text="Cancel"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:layout_below="@+id/lnrSettings"
                    android:textSize="@dimen/_12sdp"
                    android:layout_toLeftOf="@+id/view11"
                    />

                <TextView
                    android:id="@+id/btnNext"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginLeft="@dimen/_25sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:background="@drawable/gradientbg_blue"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:text="Check Balance"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_below="@+id/lnrSettings"
                    android:layout_toRightOf="@+id/view11"
                    android:textSize="@dimen/_12sdp" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_marginTop="@dimen/_minus55sdp"
                android:focusable="true"
                android:id="@+id/rlImage"
                android:layout_below="@+id/rlHeader"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/image_bg" />


                <ImageView
                    android:id="@+id/logoImg1"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/sign_up_img_"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:id="@+id/arc_progress"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    custom:arc_bottom_text="LOADING"
                    custom:arc_finished_color="#6E0D98"
                    custom:arc_text_color="#6E0D98"
                    custom:arc_unfinished_color="#197BEA"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <ImageView
                    android:id="@+id/logoImg2"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/user_icon_profile_pic_logo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/imgLogo"
                    android:layout_width="@dimen/_64sdp"
                    android:layout_height="@dimen/_64sdp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/n"
                    android:visibility="visible" />

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>