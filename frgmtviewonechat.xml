                android:layout_width="@dimen/_58sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/video_share"
                android:id="@+id/imgVideo"
                android:text="Videos"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/colorformultishare"
                android:textSize="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgDocument"
                />
            <LinearLayout
                android:id="@+id/lnr_Bottom_showing_audiotime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/chat_record_audio"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_vw_bottom_audio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/message_during_audio"
                    android:textColor="@color/purpleappcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_audio_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:textColor="@color/purpleappcolor"
                    android:padding="@dimen/dp1"
                    android:textSize="@dimen/_10sdp"
                    android:text="00:00" />
            </LinearLayout>
