    <RelativeLayout
        android:id="@+id/rlchatsWithView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrHeaderChatType"
        android:background="@drawable/usersbackground"
        android:visibility="gone"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rclChattiedWith"
            android:scrollbars="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rclViewChatting"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlchatsWithView"
        android:layout_above="@+id/rlChatingLy"
        android:background="@color/chat_background"
        />
    <LinearLayout
        android:id="@+id/chat_attachment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlChatingLy"
        android:orientation="vertical"
        android:background="@drawable/pop_bg"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/_6sdp"
        android:visibility="gone">


            <ImageView
                android:id="@+id/chat_map_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/chat_attach_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                />

            <ImageView
                android:id="@+id/chat_video_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                />

            <ImageView
                android:id="@+id/chat_smiley_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                />

    </LinearLayout>

