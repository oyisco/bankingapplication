                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorformultishare"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/gallery_share"
                android:id="@+id/imgGallery"
                android:text="Gallery"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorformultishare"
                android:layout_marginLeft="@dimen/_minus2sdp"
                android:layout_toRightOf="@+id/chat_record_audio"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/camera_share"
                android:id="@+id/imgCamera"
                android:text="Camera"
                android:drawablePadding="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColor="@color/colorformultishare"
                android:textSize="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgGallery"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/document_share"
                android:id="@+id/imgDocument"
                android:text="Document"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/colorformultishare"
                android:textSize="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgCamera"

                />
            <Button
