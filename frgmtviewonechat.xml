                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/emoticon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_alignBottom="@+id/edtCommenting"

                        />
                    <EditText
                        android:id="@+id/edtCommenting"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/_35sdp"
                        android:maxHeight="@dimen/_90sdp"
                        android:layout_centerVertical="true"
                        android:hint="Type message here..."
                        android:layout_toRightOf="@+id/btnEmojis"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:inputType="textMultiLine"
                        style="@style/myEditText"
                        android:layout_marginRight="@dimen/_8sdp"
                         />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/send"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignBottom="@+id/lnrChating"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/btnSend1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/send"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignBottom="@+id/lnrChating"
                    android:visibility="invisible"
                    />
