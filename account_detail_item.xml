<?xml version="1.0" encoding="utf-8"?>
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rlScrl"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        >
    <RelativeLayout
    android:id="@+id/Main"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70sdp"
    android:layout_margin="@dimen/_2sdp"
    >

    <TextView
        android:id="@+id/txtTitle"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="Account Detail : "
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toLeftOf="@+id/tctDefault"
        />
    <TextView
        android:id="@+id/txtCardName"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="William Heaven"
        android:textColor="@color/black"
        android:layout_marginLeft="12dp"
        android:layout_below="@+id/txtTitle"
        android:layout_toRightOf="@+id/imgUserChatedWith"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_toLeftOf="@+id/tctDefault" />
    <TextView
        android:id="@+id/txtCardNumber"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="asdasdas"
        android:layout_below="@+id/txtCardName"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_11sdp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/tctDefault"
        />

     <Button
         android:id="@+id/tctDefault"
         android:layout_height="wrap_content"
         android:layout_width="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_centerVertical="true"
         android:text="DEFAULT"
         android:textStyle="bold"
         android:background="@android:color/transparent"
         android:textColor="@color/timAndNameClr"
         />
</RelativeLayout>
</android.support.v7.widget.CardView>

