<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/forgot_password_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logoImg"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_login" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_44sdp"
                    android:gravity="center"
                    android:text="FORGOT PASSWORD"
                    android:textColor="#5e0b81"
                    android:textSize="@dimen/_20sdp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/resetPassword_layoutV1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:background="@drawable/welcome_bottom_bg"
                android:orientation="vertical"
                android:visibility="visible">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_56sdp"
                        android:background="@drawable/textviewbottomline"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp"
                        android:visibility="visible">

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:src="@drawable/email_icon_" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColorHint="#FFFFFF">

                            <EditText
                                android:id="@+id/edtEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:hint="Email Address"
                                android:paddingTop="@dimen/_4sdp"
                                android:inputType="textWebEmailAddress"
                                android:paddingLeft="@dimen/_36sdp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/textviewbottomline"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:src="@drawable/security_question_" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColorHint="#FFFFFF">

                            <EditText
                                android:id="@+id/edtSecurityQuestion"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:backgroundTint="#ffffff"
                                android:hint="Security Question"
                                android:editable="false"
                                android:focusableInTouchMode="false"
                                android:inputType="text"
                                android:paddingTop="@dimen/_4sdp"
                                android:paddingLeft="@dimen/_36sdp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:background="@drawable/textviewbottomline"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_8sdp">

                        <ImageView
                            android:layout_width="@dimen/_24sdp"
                            android:layout_height="@dimen/_24sdp"
                            android:layout_centerVertical="true"
                            android:paddingLeft="@dimen/_12sdp"
                            android:paddingTop="@dimen/_12sdp"
                            android:src="@drawable/security_answer_" />
                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textColorHint="#FFFFFF">

                            <EditText
                                android:id="@+id/edtSecurityAnswer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:background="@android:color/transparent"
                                android:hint="Security Answer"
                                android:inputType="text"
                                android:paddingLeft="@dimen/_36sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:textColor="#ffffff"
                                android:textColorHint="#ffffff" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                </LinearLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp">

                    <Button
                        android:id="@+id/btnBack1"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/sign_up_btn_new"
                        android:text="BACK"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp" />

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/sign_in_btn_new"
                        android:text="NEXT"
                        android:visibility="visible"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp" />
                    <Button
                        android:id="@+id/btnResetPss"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/sign_in_btn_new"
                        android:text="RESET"
                        android:visibility="gone"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_12sdp" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/resetPassword_layoutV2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:background="@drawable/welcome_bottom_bg"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_56sdp"
                    android:background="@drawable/textviewbottomline"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:src="@drawable/password_icon_" />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:backgroundTint="#ffffff"
                        android:hint="Password"
                        android:inputType="numberPassword"
                        android:maxLength="5"
                        android:paddingLeft="@dimen/_36sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/textviewbottomline"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_8sdp">

                    <ImageView
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_centerVertical="true"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:src="@drawable/confrm_pass_icon_" />
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textColorHint="#FFFFFF">

                    <EditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:backgroundTint="#ffffff"
                        android:hint="Confirm Password"
                        android:maxLength="5"
                        android:inputType="numberPassword"
                        android:paddingLeft="@dimen/_36sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_44sdp"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp">

                    <Button
                        android:id="@+id/btnBack2"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/back_btn_bg_"
                        android:text="BACK"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_16sdp" />

                    <Button
                        android:id="@+id/btnSend"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/next_btn_bg_"
                        android:text="SEND"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_16sdp" />


                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>


        <FrameLayout
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_70sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_bg" />

            <ImageView
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/forget_password_lock_icon_" />
        </FrameLayout>

    </FrameLayout>


</LinearLayout>
