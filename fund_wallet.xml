<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rlMainn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#77000000">

        <RelativeLayout
            android:id="@+id/rlMain1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/_9sdp"
            android:background="@drawable/shape_with_corner_popqr"
            android:paddingBottom="20dp"
            android:paddingTop="10dp">

            <ImageView
                android:id="@+id/imgClose"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/close"
                android:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/rldetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlImage"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:padding="10dp">

                <TextView
                    android:id="@+id/txtDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="FUND WALLET"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/purpleappcolor"
                    android:textSize="@dimen/_20sdp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layoutBottom_v3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rldetail"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/shape_with_corner"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_10sdp"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:background="@drawable/shape_fund_wallet"
                    >

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:theme="@style/textcoloraccoutnbalance"
                        >
                        <EditText
                            android:id="@+id/edtAmountToFund"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:backgroundTint="#ffffff"
                            android:hint="Amount (#)"
                            android:inputType="number"
                            android:paddingTop="@dimen/_4sdp"
                            android:textColor="#720d9d"
                            android:textColorHint="#720d9d" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="CARD DETAILS"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:textColor="#720d9d"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginTop="@dimen/_10sdp"

                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:background="@drawable/shape_fund_wallet"
                    android:paddingTop="@dimen/_5sdp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:theme="@style/textcoloraccoutnbalance"
                        >
                        <EditText
                            android:id="@+id/edtNameOnCard"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:backgroundTint="#ffffff"
                            android:hint="Name On Card (optional)"
                            android:inputType="textPersonName"
                            android:paddingTop="@dimen/_4sdp"
                            android:textColor="#720d9d"
                            android:textColorHint="#720d9d" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:background="@drawable/shape_fund_wallet"
                    android:paddingTop="@dimen/_4sdp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:theme="@style/textcoloraccoutnbalance">

                        <EditText
                            android:id="@+id/edtCardNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:backgroundTint="#ffffff"
                            android:hint="Card Number"
                            android:inputType="textPersonName"
                            android:paddingTop="@dimen/_4sdp"
                            android:textColor="#720d9d"
                            android:textColorHint="#720d9d" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:paddingBottom="@dimen/_12sdp"
                        android:paddingTop="@dimen/_12sdp"
                        android:text="Expiry Date"
                        android:textColor="@color/purpleappcolor"
                        android:textSize="@dimen/_12sdp" />

                    <RelativeLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/shape_fund_wallet">

                        <EditText
                            android:id="@+id/edtMonth"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/transparent"
                            android:hint="Month"
                            android:padding="@dimen/_6sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:textColor="#720d9d"
                            android:textColorHint="#720d9d" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@drawable/shape_fund_wallet">

                        <EditText
                            android:id="@+id/edtYear"
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:hint="Year"
                            android:padding="@dimen/_6sdp"
                            android:paddingTop="@dimen/_4sdp"
                            android:singleLine="true"
                            android:textColor="#720d9d"
                            android:textColorHint="#720d9d" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_12sdp"
                    android:layout_marginRight="@dimen/_12sdp"

                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fund_wallet">

                        <ImageView
                            android:id="@+id/imgViewPssCvv"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_toLeftOf="@+id/imgCVVMark"
                            android:src="@drawable/show" />

                        <ImageView
                            android:id="@+id/imgCVVMark"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/question_mark_"
                            android:visibility="gone" />

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imgViewPssCvv"
                            android:theme="@style/textcoloraccoutnbalance">

                            <EditText
                                android:id="@+id/edtCVV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/transparent"
                                android:backgroundTint="#ffffff"
                                android:hint="CVV"
                                android:inputType="numberPassword"
                                android:maxLength="3"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:textColor="#720d9d"
                                android:textColorHint="#720d9d" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_fund_wallet"

                        >

                        <ImageView
                            android:id="@+id/imgViewPssPin"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_3sdp"
                            android:layout_toLeftOf="@+id/imgPINMark"
                            android:src="@drawable/show" />

                        <ImageView
                            android:id="@+id/imgPINMark"
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/question_mark_"
                            android:visibility="gone" />


                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/imgViewPssPin"
                            android:theme="@style/textcoloraccoutnbalance">

                            <EditText
                                android:id="@+id/edtPin"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/transparent"
                                android:backgroundTint="#ffffff"
                                android:hint="PIN"
                                android:inputType="numberPassword"
                                android:maxLength="4"
                                android:paddingBottom="@dimen/_8sdp"
                                android:paddingTop="@dimen/_4sdp"
                                android:textColor="#720d9d"
                                android:textColorHint="#720d9d" />
                        </android.support.design.widget.TextInputLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:layout_below="@+id/layoutBottom_v3"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_toLeftOf="@+id/view11"
                android:background="@drawable/gradientbg_purple"
                android:gravity="center"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:text="Cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/btnNext"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_36sdp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/layoutBottom_v3"
                android:layout_marginBottom="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_toRightOf="@+id/view11"
                android:background="@drawable/gradientbg_blue"
                android:gravity="center"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:text="Fund Wallet"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

