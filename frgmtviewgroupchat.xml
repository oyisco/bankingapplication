<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rlMain"
    >

    <RelativeLayout
        android:id="@+id/rlchatsWithView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrHeaderChatType"
        android:background="@color/color_chat_topbar"
        android:visibility="visible"
        android:padding="@dimen/_5sdp"
        >
        <TextView
            android:id="@+id/txtGroupName"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="GroupName"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/txtGroupMembers"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Group Members"
            android:layout_below="@+id/txtGroupName"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <!--<android.support.v7.widget.RecyclerView
            android:id="@+id/rclChattiedWith"
            android:scrollbars="vertical"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>-->
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rclViewChatting"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlchatsWithView"
        android:layout_above="@+id/rlChatingLy"
        android:background="@color/chat_background"
        />
    <LinearLayout
        android:id="@+id/chat_attachment_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rlChatingLy"
        android:orientation="vertical"
        android:background="@drawable/pop_bg"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_alignParentLeft="true"
        android:padding="@dimen/_6sdp"
        android:visibility="gone">


        <ImageView
            android:id="@+id/chat_map_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/chat_attach_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <ImageView
            android:id="@+id/chat_video_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            />

        <ImageView
            android:id="@+id/chat_smiley_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_5sdp"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rlChatingLy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/rlChatbottom"
            >
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/voice"
                android:id="@+id/chat_record_audio"
                android:layout_alignBottom="@+id/lnrChatMsg"
                android:layout_margin="@dimen/_5sdp"
                />-->
            <!--<LinearLayout
                android:id="@+id/lnr_Bottom_showing_audiotime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_vw_bottom_audio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/message_during_audio"
                    android:textColor="@color/purpleappcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_audio_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:textColor="@color/purpleappcolor"
                    android:padding="@dimen/dp1"
                    android:textSize="@dimen/_10sdp"
                    android:text="00:00" />
            </LinearLayout>-->
            <RelativeLayout
                android:id="@+id/lnrChatMsg"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible"
                >
                <!-- <ImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/plus_org"
                     android:id="@+id/imgatttchmnt"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_alignBottom="@+id/lnrChating"
                     />-->
                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/lnrChating"
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bgforpssselector"
                    android:layout_toLeftOf="@+id/btnSend1"
                    >
                    <ImageView
                        android:id="@+id/btnEmojis"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:src="@drawable/emoticon"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:layout_alignBottom="@+id/edtCommenting"

                        />
                    <EditText
                        android:id="@+id/edtCommenting"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:minHeight="@dimen/_35sdp"
                        android:maxHeight="@dimen/_90sdp"
                        android:layout_centerVertical="true"
                        android:hint="Type message here..."
                        android:layout_toRightOf="@+id/btnEmojis"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:inputType="textMultiLine"
                        style="@style/myEditText"
                        android:layout_marginRight="@dimen/_8sdp"
                        />
                </RelativeLayout>
                <ImageView
                    android:id="@+id/btnSend"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/send"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignBottom="@+id/lnrChating"
                    android:visibility="gone"
                    />
                <ImageView
                    android:id="@+id/btnSend1"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/send"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignBottom="@+id/lnrChating"
                    android:visibility="invisible"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/plus_org"
                    android:id="@+id/imgatttchmnt"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_alignBottom="@+id/lnrChating"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rlMultiChat"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/rlChatbottom"
            android:padding="@dimen/_5sdp"
            android:background="@color/white"
            android:visibility="gone"
            >
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/voice"
                android:id="@+id/chat_record_audio"
                android:text="Voice"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorformultishare"
                android:layout_alignParentLeft="true"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/gallery_share"
                android:id="@+id/imgGallery"
                android:text="Gallery"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/colorformultishare"
                android:layout_marginLeft="@dimen/_minus2sdp"
                android:layout_toRightOf="@+id/chat_record_audio"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/camera_share"
                android:id="@+id/imgCamera"
                android:text="Camera"
                android:drawablePadding="@dimen/_5sdp"
                android:background="@android:color/transparent"
                android:textColor="@color/colorformultishare"
                android:textSize="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgGallery"
                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_57sdp"
                android:drawableTop="@drawable/document_share"
                android:id="@+id/imgDocument"
                android:text="Document"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/colorformultishare"
                android:textSize="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgCamera"

                />
            <Button
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_58sdp"
                android:layout_weight="1"
                android:drawableTop="@drawable/video_share"
                android:id="@+id/imgVideo"
                android:text="Videos"
                android:background="@android:color/transparent"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/colorformultishare"
                android:textSize="@dimen/_10sdp"
                android:layout_toRightOf="@+id/imgDocument"
                />
            <LinearLayout
                android:id="@+id/lnr_Bottom_showing_audiotime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@+id/chat_record_audio"
                android:layout_centerVertical="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/txt_vw_bottom_audio"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp5"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="@string/message_during_audio"
                    android:textColor="@color/purpleappcolor"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_audio_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:textColor="@color/purpleappcolor"
                    android:padding="@dimen/dp1"
                    android:textSize="@dimen/_10sdp"
                    android:text="00:00" />
            </LinearLayout>
        </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
