<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SmsNumberVerificationV2">

    <TextView
        android:id="@+id/txtvw_instruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:gravity="center"
        android:text="Enter Code Sent to your mobile no"
        android:textSize="@dimen/dp14" />

    <EditText
        android:id="@+id/edtw_sms_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtvw_instruction"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="Code sent to your no by sms"
        android:padding="@dimen/dp5"
        android:singleLine="true"
        android:textSize="@dimen/_17sdp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtw_sms_code"
        android:layout_marginTop="20dp"
        android:background="@drawable/wallet_back"
        android:padding="@dimen/dp5"
        android:text="Verify"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp14" />


</RelativeLayout>
