<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    >

    <RelativeLayout
        android:id="@+id/MainYou"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:id="@+id/imgUserChatting"
            android:layout_height="@dimen/_35sdp"
            android:layout_width="@dimen/_35sdp"
            android:src="@drawable/user"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:visibility="gone"

            />
        <RelativeLayout
            android:id="@+id/rlChatSenderSign"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/tic_w"
            android:layout_marginRight="@dimen/_minus13sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_40sdp"
            />
        <RelativeLayout
            android:id="@+id/rlMainChatBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/rlChatSenderSign"
            android:background="@drawable/bgformainchatbox_recieving"
            android:layout_marginRight="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            >

            <RelativeLayout
                android:id="@+id/lnrHeaderChatType"
                android:layout_below="@+id/top_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSenderName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/timAndNameClr"
                    android:text="WILLIAM STEPHEN"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="@dimen/_10sdp"
                    />

                <ImageView
                    android:id="@+id/imgAvailabeStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtSenderName"
                    android:layout_marginLeft="@dimen/_4sdp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/online" />

                <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:textColor="@color/timAndNameClr"
                    android:text="3:27"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/txtMessage"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    />
                <TextView
                    android:id="@+id/txtMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_below="@+id/txtSenderName"
                    android:textColor="@color/black"
                    android:text="@string/dummytext"
                    />

                <LinearLayout
                    android:id="@+id/lnrMoreChatView"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_below="@+id/txtDateTime"
                    />

            </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
</RelativeLayout>
