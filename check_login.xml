<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:background="#ffffff"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/logoImg"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/logo_login" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_44sdp"
                    android:gravity="center"
                    android:text="Login To your Account"
                    android:textColor="#5e0b81"
                    android:textSize="@dimen/_20sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.4"
                android:background="@drawable/welcome_bottom_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_50sdp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_margin="@dimen/_7sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:maxLength="1"
                            android:textColor="@android:color/transparent"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/pass_shadded" />

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/pass_unselect"
                            android:maxLength="1"
                            android:textColor="@android:color/transparent"/>

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/pass_unselect"
                            android:maxLength="1"
                            android:textColor="@android:color/transparent"/>

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_2sdp"
                            android:background="@drawable/pass_unselect"
                            android:maxLength="1"
                            android:textColor="@android:color/transparent"/>

                        <TextView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_2sdp"

                            android:background="@drawable/pass_unselect"
                            android:maxLength="1"
                            android:textColor="@android:color/transparent"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_3sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="1"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="2"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="3"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="4"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="5"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="6"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp">

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="7"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="8"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="9"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:weightSum="3">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:background="@android:color/transparent"
                                android:text="0"
                                android:layout_margin="@dimen/_2sdp"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>

                            <ImageButton
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_weight="1"
                                android:layout_margin="@dimen/_2sdp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/cross_icon"
                                android:textColor="@android:color/white"
                                android:textSize="@dimen/_17sdp"
                                style="?android:attr/borderlessButtonStyle"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:text="DONT HAVE ANY ACCOUNT"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_8sdp" />

                        <TextView
                            android:id="@+id/signUpLinkTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_2sdp"
                            android:background="@drawable/textviewbottomline"
                            android:text="SIGN UP"
                            android:textColor="#ffffff"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/forgetPasswordTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/_8sdp"
                        android:background="@drawable/textviewbottomline"
                        android:text="FORGOT PASSWORD?"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/_8sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_wallet_bg">

                        <ImageView
                            android:id="@+id/walletImg"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_36sdp"
                            android:src="@drawable/wallet_icon" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="21dp"
                            android:layout_marginStart="21dp"
                            android:layout_toEndOf="@+id/walletImg"
                            android:layout_toRightOf="@+id/walletImg"
                            android:text="WALLET"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_weight="1"
                        android:background="@drawable/bottom_chat_bg">

                        <ImageView
                            android:id="@+id/chatImg"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_36sdp"
                            android:src="@drawable/chat_icon" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_12sdp"
                            android:layout_toRightOf="@id/chatImg"
                            android:text="CHAT"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12sdp" />
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <FrameLayout
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_110sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_88sdp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/image_bg" />

            <ImageView
                android:layout_width="@dimen/_64sdp"
                android:layout_height="@dimen/_64sdp"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:src="@drawable/lock_img_top_" />
        </FrameLayout>

    </FrameLayout>


</LinearLayout>

