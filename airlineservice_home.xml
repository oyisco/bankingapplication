<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_with_border_corner"
    android:layout_below="@+id/txtTitle"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/grey_quickpay"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                <LinearLayout
                    android:id="@+id/lnr1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp1000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/aeroonhold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp1500"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/airpeacee"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp2000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/African"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp2500"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/Aero"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp4000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/Azman"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp5000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/Dana"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp6000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/Discovery"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp6500"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/Emirates"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnMidView"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/midviewair"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            android:layout_gravity="center_horizontal"
                            />
                        <Button
                            android:id="@+id/btnRwandAir"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:text="@string/rwandair"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

        </LinearLayout>

</ScrollView>
