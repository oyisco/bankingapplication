
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_with_border_corner"
    android:layout_below="@+id/txtTitle"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_with_border_corner"
            android:orientation="vertical"
            ><LinearLayout
                    android:id="@+id/lnr1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnSmile"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="Smile"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnSpectranet"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="Spectranet"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:gravity="center"
                    >
                        <Button
                            android:id="@+id/btnIpnx"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="ipNX"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

        </LinearLayout>

</ScrollView>


