<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include
        android:id="@+id/topmenu"
        layout="@layout/topbar_withmenu_logo"
        />
<ScrollView
    android:layout_below="@+id/topmenu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_with_border_corner"
    >
    <RelativeLayout
        android:id="@+id/rlScroll"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/_20sdp"
        android:background="@drawable/shape_with_border_corner"
        >
        <RelativeLayout
            android:id="@+id/rlMainForBg"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@drawable/shape_with_border_corner"
            >
            <RelativeLayout
                android:id="@+id/rlForAcoutnType"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5sdp"
                >
                <TextView
                    android:id="@+id/txtSavingAccoutn"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_width="match_parent"
                    android:text="Account Type : "
                    android:gravity=""
                    android:paddingLeft="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/txtcolorfundstransfer"
                    android:layout_toLeftOf="@+id/imgArrowAcnt"
                    />
                </RelativeLayout>
            <View
                android:id="@+id/v9"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rlForAcoutnType"
                android:background="@color/lightGrey"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/textviewbottomline"
                android:layout_below="@+id/v9"
                android:id="@+id/rlAcntNumber"
                android:layout_marginTop="@dimen/_7sdp"
                android:minHeight="@dimen/_38sdp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:theme="@style/TextLabelFundsTransfer"
                    >
                    <EditText
                        android:id="@+id/edtName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="Account Number"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textColorHint="@color/timAndNameClr" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <View
                android:id="@+id/v1"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rlAcntNumber"
                android:background="@color/lightGrey"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/textviewbottomline"
                android:layout_below="@+id/v1"
                android:id="@+id/rlAcntName"
                android:layout_marginTop="@dimen/_7sdp"
                android:minHeight="@dimen/_38sdp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:theme="@style/TextLabelFundsTransfer"

                    >
                    <EditText
                        android:id="@+id/edtPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="Account Name"
                        android:inputType="textPersonName"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textSize="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/timAndNameClr" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>
            <View
                android:id="@+id/v2"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rlAcntName"
                android:background="@color/lightGrey"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@drawable/textviewbottomline"
                android:layout_below="@+id/v2"
                android:id="@+id/rlAcntN"
                android:layout_marginTop="@dimen/_7sdp"
                android:minHeight="@dimen/_38sdp"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:layout_centerVertical="true"
                    android:theme="@style/TextLabelFundsTransfer"
                    >
                    <EditText
                        android:id="@+id/edtAMppunt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerVertical="true"
                        android:background="@android:color/transparent"
                        android:hint="Amount (â‚¦)"
                        android:inputType="number"
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingTop="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:textSize="@dimen/_13sdp"
                        android:textColorHint="#ffffff" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <View
                android:id="@+id/v8"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/rlAcntN"
                android:background="@color/lightGrey"
                />
            <View
                android:id="@+id/v4"
                android:layout_height="0.5dp"
                android:layout_width="match_parent"
                android:layout_below="@+id/v8"
                android:background="@color/lightGrey"
                />
            <RelativeLayout
                android:id="@+id/rlTransferTye"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_below="@+id/v4"
                android:layout_margin="@dimen/_10sdp"
                >
                <ImageView
                    android:id="@+id/btnCheck"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_width="@dimen/_20sdp"
                    android:background="@drawable/uncheck_"
                    />
                <TextView
                    android:id="@+id/txtAutomaticTrnsfr"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:text="Automatic Transfer"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/btnCheck"
                    android:textColor="@color/txtcolorfundstransfer"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_13sdp"
                    />
            </RelativeLayout>
        </RelativeLayout>
        <android.support.percent.PercentRelativeLayout
            android:id="@+id/rlShowHideOptions"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_below="@+id/rlMainForBg"
            android:orientation="horizontal"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:visibility="gone"
            >
            <!--<RelativeLayout
                android:id="@+id/rldaily"
                android:layout_height="wrap_content"
                app:layout_widthPercent="25%"
                >-->
            <ImageView
                android:id="@+id/imgDaily"
                android:layout_height="@dimen/_17sdp"
                android:layout_width="@dimen/_17sdp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/radio"
                android:layout_marginTop="@dimen/_2sdp"
                />
            <TextView
                android:id="@+id/txtDaily"
                android:layout_height="wrap_content"
                app:layout_widthPercent="13%"
                android:layout_toRightOf="@+id/imgDaily"
                android:text="Daily"
                app:layout_marginLeftPercent="1%"
                android:layout_marginTop="@dimen/_2sdp"
                />
            <!-- </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/rlMonthly"
                 android:layout_height="wrap_content"
                 app:layout_widthPercent="25%"
                 android:layout_toRightOf="@+id/rldaily"
                 >-->
            <ImageView
                android:id="@+id/imgWeekly"
                android:layout_height="@dimen/_17sdp"
                android:layout_width="@dimen/_17sdp"
                android:layout_toRightOf="@+id/txtDaily"
                android:src="@drawable/radio"
                app:layout_marginLeftPercent="1%"
                android:layout_marginTop="@dimen/_2sdp"
                />
            <TextView
                android:id="@+id/txtWeekly"
                android:layout_height="wrap_content"
                app:layout_widthPercent="17%"
                android:layout_toRightOf="@+id/imgWeekly"
                android:text="Weekly"
                android:layout_marginTop="@dimen/_1sdp"
                app:layout_marginLeftPercent="1%"
                />
            <!-- </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/rlWeekly"
                 android:layout_height="wrap_content"
                 app:layout_widthPercent="25%"
                 android:layout_toRightOf="@+id/rlMonthly"
                 >-->
            <ImageView
                android:id="@+id/imgMonthly"
                android:layout_height="@dimen/_17sdp"
                android:layout_width="@dimen/_17sdp"
                android:layout_toRightOf="@+id/txtWeekly"
                android:src="@drawable/radio"
                app:layout_marginLeftPercent="1%"
                android:layout_marginTop="@dimen/_2sdp"

                />
            <TextView
                android:id="@+id/txtMonthly"
                android:layout_height="wrap_content"
                app:layout_widthPercent="19%"
                android:layout_toRightOf="@+id/imgMonthly"
                android:text="Monthly"
                android:layout_marginTop="@dimen/_1sdp"
                app:layout_marginLeftPercent="1%"
                />
            <!-- </RelativeLayout>
             <RelativeLayout
                 android:id="@+id/rlSelect"
                 android:layout_height="wrap_content"
                 app:layout_widthPercent="25%"
                 android:layout_toRightOf="@+id/rlWeekly"
                 >-->
            <ImageView
                android:id="@+id/imgSelect"
                android:layout_height="@dimen/_17sdp"
                android:layout_width="@dimen/_17sdp"
                android:layout_toRightOf="@+id/txtMonthly"
                android:src="@drawable/radio"
                app:layout_marginLeftPercent="1%"
                android:layout_marginTop="@dimen/_2sdp"

                />
            <TextView
                android:id="@+id/txtSelect"
                android:layout_height="wrap_content"
                app:layout_widthPercent="14%"
                android:layout_toRightOf="@+id/imgSelect"
                android:text="Select"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_2sdp"

                />
            <!--</RelativeLayout>-->
        </android.support.percent.PercentRelativeLayout>

        <RelativeLayout
            android:id="@+id/rllmm"
            android:layout_height="wrap_content"
            android:layout_width="@dimen/_100sdp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/rlShowHideOptions"
            android:visibility="gone"
            android:background="@drawable/shape_days"
            android:paddingLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            >
            <TextView
                android:id="@+id/edtMonth"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_50sdp"
                android:hint="Month"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <View
                android:layout_width="@dimen/_1sdp"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/txtcolorfundstransfer"
                android:layout_toLeftOf="@+id/edtMonth"
                android:id="@+id/view"
                android:layout_marginRight="@dimen/_5sdp"
                />
            <TextView
                android:id="@+id/edtDay"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_50sdp"
                android:hint="Day"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view"
                android:layout_marginLeft="@dimen/_2sdp"
                />
        </RelativeLayout>
        <View
            android:id="@+id/view11"
            android:layout_height="1dp"
            android:layout_width="1dp"
            android:layout_below="@+id/rllmm"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/btnBack"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/gradientbg_purple"
            android:text="BACK"
            android:textColor="@color/white"
            android:layout_below="@+id/rllmm"
            android:paddingLeft="@dimen/_15sdp"
            android:paddingRight="@dimen/_15sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toLeftOf="@+id/view11"
            android:layout_marginLeft="@dimen/_20sdp"
            />

        <TextView
            android:id="@+id/btnNext"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:background="@drawable/gradientbg_blue"
            android:text="NEXT"
            android:textColor="@color/white"
            android:layout_below="@+id/rllmm"
            android:paddingLeft="@dimen/_30sdp"
            android:paddingRight="@dimen/_30sdp"
            android:paddingTop="@dimen/_7sdp"
            android:paddingBottom="@dimen/_7sdp"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/view11"
            />


    </RelativeLayout>

</ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:id="@+id/lnrBottomChatAndWallet"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_46sdp"
            android:layout_weight="1"
            android:id="@+id/mRelWalllet"
            android:visibility="gone"
            android:background="@drawable/wallet_back">

            <ImageView
                android:id="@+id/walletImg"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_36sdp"
                android:src="@drawable/wallet_icon" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_toEndOf="@+id/walletImg"
                android:layout_toRightOf="@+id/walletImg"
                android:text="WALLET"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="@dimen/_46sdp"
            android:layout_weight="1"
            android:id="@+id/rlChat"
            android:visibility="gone"
            android:background="@drawable/chat_back">

            <ImageView
                android:id="@+id/chatImg"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_36sdp"
                android:src="@drawable/chat_icon" />

            <TextView
                android:id="@+id/btnChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_toRightOf="@id/chatImg"
                android:text="CHAT"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/_12sdp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>