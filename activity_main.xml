                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_46sdp"
                    android:layout_weight="1"
                    android:id="@+id/rlChat"
                    android:background="@drawable/chat_back"
                    android:visibility="gone"
