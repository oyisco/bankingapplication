                android:background="@drawable/bgforpssselector"
                android:layout_weight="0.7"
                android:gravity="center"
                android:id="@+id/notitopOk"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Okay"
