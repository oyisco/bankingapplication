                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="User Name"
                                android:textColor="#FFFFFF"
                                android:textSize="@dimen/_12sdp" />
                            <TextView
                                android:id="@+id/txtNickName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
