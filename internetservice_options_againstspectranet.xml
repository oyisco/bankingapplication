<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_with_border_corner"
    android:layout_below="@+id/txtTitle"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/grey_quickpay"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:padding="@dimen/_7sdp"
                    android:text="@string/SmileAirtime"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    />
                <LinearLayout
                    android:id="@+id/lnr1"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp1000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/unifiedValue40gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp1500"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/unifiedgold"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp2000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/unifiedValue15gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp2500"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/unifiednitvalue40gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp4000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/unifiednitvalue20gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/btnTopUp5000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/unifiedvalue200gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/btnTopUp6000"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/unifiedvalue110gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                        <Button
                            android:id="@+id/uni25gb"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:layout_toRightOf="@+id/btnTopUp1000"
                            android:text="@string/unifiedvalue55gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_below="@+id/txtTitle"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_margin="@dimen/_5sdp"
                    >
                        <Button
                            android:id="@+id/uni7gb"
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_blue"
                            android:text="@string/unifiedvalue25gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            android:layout_gravity="center_horizontal"
                            />
                        <Button
                            android:id="@+id/btnTopUp6500"
                            android:layout_height="match_parent"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/gradientbg_purple"
                            android:text="@string/unifiedvalue7gb"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9sdp"
                            android:layout_below="@+id/txtTitle"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:paddingTop="@dimen/_15sdp"
                            android:paddingBottom="@dimen/_15sdp"
                            />
                </LinearLayout>
        </LinearLayout>
</ScrollView>
