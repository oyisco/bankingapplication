<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/welcome_bottom_bg"
    android:id="@+id/rlHome"
    >
    <include
        android:id="@+id/topBar"
        layout="@layout/topbar_withback_logo"
        />
    <ScrollView
        android:id="@+id/scrl"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/topBar"
        >
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:id="@+id/rlMain"
                >
                    <RelativeLayout
                        android:id="@+id/rlFunds"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        >
                    <ImageView
                        android:id="@+id/mImgFund"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/gray_bg"
                        />

                    <ImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/airline_ticket_icon"
                        />
                    </RelativeLayout>

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/rlFunds"
                    android:textColor="@color/white"
                    android:text="Aero-Book On Hold"
                    android:textSize="@dimen/_14sdp" />
            </RelativeLayout>
            <TextView
                android:id="@+id/txtSummary"
                android:layout_below="@+id/rlMain"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="SUMMARY"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/view"
                android:layout_below="@+id/txtSummary"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/txtBokingRef"
                android:layout_below="@+id/view"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Booking Refrence"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/txtAmount"
                android:layout_below="@+id/txtBokingRef"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Amount (#)"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/txtEmailAddress1"
                android:layout_below="@+id/txtAmount"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Email : "
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"

                />
            <TextView
                android:id="@+id/txtEmailAddress"
                android:layout_below="@+id/txtAmount"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Email"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/txtEmailAddress1"

                />
            <TextView
                android:id="@+id/txtPhoneNumber1"
                android:layout_below="@+id/txtEmailAddress"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Phone Number :"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/txtPhoneNumber"
                android:layout_below="@+id/txtEmailAddress"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Phone Number"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_toRightOf="@+id/txtPhoneNumber1"
                />
            <TextView
                android:id="@+id/txtPayment"
                android:layout_below="@+id/txtPhoneNumber"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="PAYMENT"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"
                />
            <View
                android:id="@+id/view1"
                android:layout_below="@+id/txtPayment"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                />
<RelativeLayout
    android:id="@+id/rlForCard"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_below="@+id/view1"
    android:layout_marginTop="@dimen/_5sdp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/textviewbottomline">

            <ImageView
                android:id="@+id/imgViewPssCvv"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_toLeftOf="@+id/imgCVVMark"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/viewable" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/imgViewPssCvv"
                android:theme="@style/themeforinuputtext"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                >

                <EditText
                    android:id="@+id/edtCVV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#ffffff"
                    android:hint="CVV"
                    android:inputType="numberPassword"
                    android:maxLength="3"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_14sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_weight="1"
            android:background="@drawable/textviewbottomline"
            >
            <ImageView
                android:id="@+id/imgViewPssPin"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_toLeftOf="@+id/imgPINMark"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/viewable" />

            <ImageView
                android:id="@+id/imgPINMark"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:src="@drawable/question_mark_" />


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:theme="@style/themeforinuputtext"
                android:layout_toLeftOf="@+id/imgViewPssPin"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                >

                <EditText
                    android:id="@+id/edtPin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:backgroundTint="#ffffff"
                    android:hint="PIN"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:paddingBottom="@dimen/_8sdp"
                    android:paddingTop="@dimen/_4sdp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    />
            </android.support.design.widget.TextInputLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCvvAndPin"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_below="@+id/rlForCard"
            >
            <!--<TextView
                android:id="@+id/txtCVV"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="CVV"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                />-->
            <RelativeLayout
                android:id="@+id/rlForCvv"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/textviewbottomline">

                <ImageView
                    android:id="@+id/imgViewCvvMine"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_toLeftOf="@+id/imgCVVMark"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/viewable" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgViewCvvMine"
                    android:theme="@style/themeforinuputtext"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    >

                    <EditText
                        android:id="@+id/txtCVV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:backgroundTint="#ffffff"
                        android:hint="CVV"
                        android:inputType="numberPassword"
                        android:maxLength="3"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlForPin"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@+id/rlForCvv"
                android:background="@drawable/textviewbottomline">

                <ImageView
                    android:id="@+id/imgViewPinMine"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:layout_toLeftOf="@+id/imgCVVMark"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/viewable" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imgViewPinMine"
                    android:theme="@style/themeforinuputtext"
                    android:textColorHint="@color/white"
                    android:textColor="@color/white"
                    >

                    <EditText
                        android:id="@+id/txtPIN"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:backgroundTint="#ffffff"
                        android:hint="PIN"
                        android:inputType="numberPassword"
                        android:maxLength="4"
                        android:paddingBottom="@dimen/_8sdp"
                        android:paddingTop="@dimen/_4sdp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />
                </android.support.design.widget.TextInputLayout>
            </RelativeLayout>


            <!--<TextView
                android:id="@+id/txtPIN"
                android:layout_below="@+id/rlForCvv"
                android:layout_height="wrap_content"
                android:layout_width="@dimen/_100sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="PIN"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                />-->
            <!--<View
                android:id="@+id/view3"
                android:layout_below="@+id/txtPIN"
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignRight="@+id/txtPIN"
                />-->
</RelativeLayout>
            <TextView
                android:id="@+id/txtFee"
                android:layout_below="@+id/rlCvvAndPin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Convenience Fee : # 100"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                />
            <TextView
                android:id="@+id/btnTransfer"
                android:layout_below="@+id/txtFee"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="TRANSFER"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/gradientbg_blue"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingRight="@dimen/_25sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
</ScrollView>
</RelativeLayout>